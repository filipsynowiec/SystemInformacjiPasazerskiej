<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<ScrollPane pannable="true" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="systeminformacjipasazerskiej.controller.DeleteController">

   <VBox>
      <VBox>
            <Label text="Usuń stację">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <ComboBox fx:id="deleteStationBox" editable="true" />
               <Button fx:id="deleteStationButton" text="Usuń" />
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
      </VBox>
      <VBox>
            <Label text="Usuń kurs" >
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <Label text="Według ID: ">
                  <HBox.margin>
                     <Insets top="5.0" />
                  </HBox.margin>
               </Label>
               <ComboBox fx:id="deleteRideId" editable="true" />
               <Button fx:id="deleteRideButtonID" text="Znajdź" />
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
               <Label text="Według trasy: ">
                  <HBox.margin>
                     <Insets top="5.0" />
                  </HBox.margin>
               </Label>

               <Label text="Z: ">
                  <HBox.margin>
                     <Insets top="5.0" />
                  </HBox.margin>
               </Label>
               <ComboBox fx:id="deleteRideFromBox" editable="true" />
               <Label text="Do: ">
                  <HBox.margin>
                     <Insets top="5.0" />
                  </HBox.margin>
               </Label>
               <ComboBox fx:id="deleteRideToBox" editable="true" />
               <ComboBox fx:id="dayRideBox" editable="true" />
               <Button fx:id="deleteRideButton" text="Znajdź" />
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         <ListView fx:id="rideList" maxHeight="0" />
      </VBox>


      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </VBox>

</ScrollPane>
