<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="systeminformacjipasazerskiej.controller.InsertController"
            pannable="true">

    <VBox>
        <VBox>
            <Label text="Dodaj/Modyfikuj stację">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <HBox spacing="10.0">
                <Label text="Nazwa stacji:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="insertStationName" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Liczba torów:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertStationTory" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Liczba peronów:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertStationPerony" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Długość peronu:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertStationDlugosc" editable="true" />
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <children>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="insertStationButton" text="Dodaj" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
        </VBox>

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>

</ScrollPane>