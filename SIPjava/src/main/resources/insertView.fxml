<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="systeminformacjipasazerskiej.controller.InsertController"
            pannable="true">

    <VBox>
        <HBox>
        <VBox>
            <Label text="Dodaj/Modyfikuj stację">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <HBox spacing="10.0">
                <Label text="Nazwa stacji:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="insertStationName" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Liczba torów:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertStationTory" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Liczba peronów:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertStationPerony" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Długość peronu:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertStationDlugosc" editable="true" />
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Region HBox.hgrow="ALWAYS" />
                <children>
                    <Button fx:id="insertStationButton" text="Dodaj" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
        </VBox>
        </HBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <HBox>
        <VBox>
            <Label text="Dodaj odcinek">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <HBox spacing="10.0">
                <Label text="Stacja początkowa:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="insertOdcinekStart" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Stacja końcowa:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="insertOdcinekKoniec" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <children>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="insertOdcinekButton" text="Dodaj" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
        </VBox>
        </HBox>

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <HBox>
        <VBox>
            <Label text="Dodaj wagon">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <HBox spacing="10.0">
                <Label text="Model wagonu:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertWagonName" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Typ wagonu:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <ChoiceBox fx:id="insertWagonType"/>
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Długość wagonu:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertWagonLength" editable="true" />
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Liczba miejsc (1 klasa):">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertWagon1klasa" editable="true"/>
                <Label text="Liczba miejsc (2 klasa):">
                    <HBox.margin>
                        <Insets left="20.0" top="5.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertWagon2klasa" editable="true"/>
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Liczba rowerów:">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="insertWagonBikes" editable="true"/>
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="20.0">
                <CheckBox fx:id="insertWagonPrzedzialy" selected="false" text="Przedziały"/>
                <CheckBox fx:id="insertWagonAC" mnemonicParsing="false" selected="false" text="Klimatyzacja"/>
                <CheckBox fx:id="insertWagonWifi" mnemonicParsing="false" selected="false" text="Wi-fi"/>
                <CheckBox fx:id="insertWagonNiepelnosprawni" mnemonicParsing="false" selected="false" text="Miejsca dla niepełnosprawnych"/>
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
                <children>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="insertWagonButton" text="Dodaj" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="100.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
        </VBox>
        </HBox>

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <HBox>
            <VBox>
                <Label text="Dodaj skład">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <HBox spacing="10.0">
                    <Label text="Liczba różnych rodzajów wagonów:">
                        <HBox.margin>
                            <Insets top="5.0" />
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="insertSkladNumber" editable="true" />
                    <Button fx:id="insertSkladNumberOK" text="OK" />
                    <Button fx:id="insertSkladNumberClean" text="Wyczyść" />
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <VBox fx:id="insertSkladVBox" spacing="5.0">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                </VBox>
                <HBox spacing="10.0">
                    <children>
                        <CheckBox fx:id="insertSkladPrzesylki" mnemonicParsing="false" selected="false" text="Przesyłki konduktorskie"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="insertSkladButton" text="Dodaj" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                </HBox>
            </VBox>
        </HBox>

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <HBox>
            <VBox>
                <Label text="Dodaj trasę">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <HBox spacing="10.0">
                    <Label text="Liczba stacji na trasie:">
                        <HBox.margin>
                            <Insets top="5.0" />
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="insertTrasaNumber" editable="true" />
                    <Button fx:id="insertTrasaNumberOK" text="OK" />
                    <Button fx:id="insertTrasaNumberClean" text="Wyczyść" />
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <VBox fx:id="insertTrasaVBox" spacing="5.0">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                </VBox>
                <HBox spacing="10.0">
                    <children>
                        <CheckBox fx:id="insertTrasaCzyPrzyspieszona" mnemonicParsing="false" selected="false" text="Trasa przyspieszona"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="insertTrasaButton" text="Dodaj" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                </HBox>
            </VBox>
        </HBox>
    </VBox>


</ScrollPane>